<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".character.NewCharacter">

   <EditText
       android:id="@+id/input_nome"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:inputType="text"
       android:hint="Nome:"
       app:layout_constraintTop_toTopOf="parent"
       />

    <EditText
        android:id="@+id/input_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Descrição:"
        app:layout_constraintTop_toBottomOf="@id/input_nome"
        />

    <EditText
        android:id="@+id/input_idade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Age:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/input_date"
        app:layout_constraintTop_toBottomOf="@id/input_descricao"
        />

    <EditText
        android:id="@+id/input_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date:"
        app:layout_constraintStart_toEndOf="@id/input_idade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_descricao"
        />

    <EditText
        android:id="@+id/input_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link:"
        app:layout_constraintTop_toBottomOf="@id/input_idade"
        />

    <Spinner
        android:id="@+id/spinner_marvel_dc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DC/Marvel"
        app:layout_constraintTop_toBottomOf="@id/input_link"
        />

    <Spinner
        android:id="@+id/spinner_heroi_vilao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heroi/Vilao"
        app:layout_constraintTop_toBottomOf="@id/spinner_marvel_dc"
        />

    <Button
        android:id="@+id/button_enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_heroi_vilao"
        android:text="Enviar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>